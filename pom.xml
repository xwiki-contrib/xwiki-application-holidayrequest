<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.commons</groupId>
    <artifactId>xwiki-commons-pom</artifactId>
    <version>4.3</version>
  </parent>
  <groupId>org.xwiki.contrib</groupId>
  <artifactId>xwiki-application-holidayrequest</artifactId>
  <packaging>xar</packaging>
  <name>Holiday Request</name>
  <version>1.3.3-SNAPSHOT</version>
  <description>Provides XWiki users with a Holiday Request Application</description>
  <developers>
    <developer>
      <name>Thomas Delafosse</name>
    </developer>
    <developer>
      <name>Andreea Popescu</name>
    </developer>
	<developer>
      <name>Yann Flory</name>
    </developer>
  </developers>
  <issueManagement>
    <system>jira</system>
    <url>http://jira.xwiki.org/browse/HOLIDAYREQ</url>
  </issueManagement>
  <scm>
    <connection>scm:git:git://github.com/xwiki-contrib/xwiki-application-holidayrequest.git</connection>
    <developerConnection>scm:git:git@github.com:xwiki-contrib/xwiki-application-holidayrequest.git</developerConnection>
    <url>https://github.com/xwiki-contrib/xwiki-application-holidayrequest</url>
    <tag>HEAD</tag>
  </scm>
  <distributionManagement>
    <repository>
      <id>xwiki-staging</id>
      <name>XWiki Staging Repository</name>
      <url>http://nexus.xwiki.org/nexus/service/local/staging/deploy/maven2/</url>
    </repository>
  </distributionManagement>
  <properties>
    <!-- Don't run CLIRR here since there's no Java code. -->
    <xwiki.clirr.skip>true</xwiki.clirr.skip>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.xwiki.contrib</groupId>
      <artifactId>macro-fullcalendar</artifactId>
      <version>1.1.8</version>
      <type>xar</type>
    </dependency>
  </dependencies>
  <build>
    <!-- Needed to add support for the XAR packaging -->
    <extensions>
      <extension>
        <groupId>org.xwiki.commons</groupId>
        <artifactId>xwiki-commons-tool-xar-handlers</artifactId>
        <version>${commons.version}</version>
      </extension>
    </extensions>
    <plugins>
      <!-- The XAR packaging uses the XAR plugin and thus we need to define what version to use -->
      <plugin>
        <groupId>org.xwiki.commons</groupId>
        <artifactId>xwiki-commons-tool-xar-plugin</artifactId>
        <version>6.2</version>
      </plugin>
    </plugins>
  </build>
</project>
